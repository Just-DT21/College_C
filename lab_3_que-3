#include <stdio.h>

int sum_of_digits(int number) {
    return (number / 1000) + (number / 100 % 10) + (number / 10 % 10) + (number % 10);
}

int main() {
    int number;
    printf("Enter a four-digit number: ");
    scanf("%d", &number);
    printf("Sum of digits: %d\n", sum_of_digits(number));
    return 0;
}